<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e9e9"
     >
    
<LinearLayout
    android:id="@+id/detail_linearlayout_bottom"
    android:layout_width="fill_parent"
    android:layout_height="50dp"  
    android:background="#1E9D85"
    android:paddingLeft="2dp"
    android:paddingTop="5dp" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center" 
    >

    <TextView
        android:id="@+id/biaoti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="停车场详情"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/activity_vertical_margin"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView1"
   
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="false"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:src="@drawable/back" 
        android:onClick="back"/>

</RelativeLayout> 
</LinearLayout>

<LinearLayout
    android:id="@+id/fubiaoti"
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:layout_alignParentLeft="true"
    android:layout_below="@id/detail_linearlayout_bottom"
    android:background="#f9fff9" >

    <TextView
        android:id="@+id/stopname"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        android:background="@drawable/textstyle"
        android:gravity="center|fill"
        android:paddingLeft="8dp"
        android:text="青少年宫停车泊位"
        android:textColor="#000000" />
</LinearLayout>

<View 
     android:id="@+id/siv1"
		    android:layout_width="fill_parent"
		    android:layout_height="0.5dp"
		  
		    android:layout_below="@id/fubiaoti"
		    android:paddingLeft="8dp"
    android:paddingRight="8dp" 
     android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
		    android:background="#006e54"/>

<LinearLayout
        
    
    android:id="@+id/beian"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:layout_alignParentLeft="true"
    android:layout_below="@id/siv1"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/parkinfo_textview"
    android:paddingLeft="8dp"
    android:paddingRight="8dp" >

    <TextView
        android:id="@+id/sname1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:text="停车场管理办公室已备案 "
        android:textColor="#3f3f3f"
        android:background="@drawable/textstyle"
         
       
        android:textStyle="bold" />

    <TextView
        android:id="@+id/stopname2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:text="有效期至:17-02-12 "
        android:textColor="#3f3f3f"
        android:background="@drawable/textstyle"
        
        android:textStyle="bold" />
</LinearLayout>

<LinearLayout
    android:id="@+id/xq"
    android:layout_width="fill_parent"
    android:layout_height="120dp"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="5dp"
     android:layout_marginRight="5dp"
     android:paddingLeft="8dp"
      android:paddingRight="8dp"
      android:background="@drawable/pack_textview2"
    android:layout_below="@id/beian" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="93dp" >
   
    <TextView
     android:id="@+id/sto"
     android:layout_width="wrap_content"
     android:layout_height="25dp"
     android:gravity="center_vertical"
     android:paddingLeft="8dp"
     android:text="地址： 大连市西岗区五四路36-38号"
     android:textColor="#000000"
     android:background="@drawable/textstyle"
     />

 <TextView
     android:id="@+id/sto1"
     android:layout_width="wrap_content"
     android:layout_height="25dp"
     android:layout_alignParentLeft="true"
     android:layout_below="@+id/sto"
     android:gravity="center_vertical"
     android:paddingLeft="8dp"
     android:text="泊位： 36"
     android:textColor="#000000" />

 <TextView
     android:id="@+id/sto3"
     android:layout_width="wrap_content"
     android:layout_height="25dp"
     android:layout_alignParentLeft="true"
     android:layout_below="@+id/sto1"
     android:gravity="center_vertical"
     android:paddingLeft="8dp"
     android:text="收费方式：计时"
     android:textColor="#000000" />
 
</RelativeLayout>
   
</LinearLayout>

 <LinearLayout
     android:id="@+id/tel"
     android:layout_width="fill_parent"
     android:layout_height="40dp"
     android:layout_alignParentLeft="true"
     android:layout_below="@id/xq"
     android:layout_marginLeft="5dp"
     android:layout_marginRight="5dp" 
     android:layout_marginTop="10dp" >>

   <Button
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
          android:background="@drawable/buttonstyle"
        android:text="呼          叫" 
        android:textColor="#3f3f3f"
        android:onClick="call"/>
</LinearLayout>


</RelativeLayout>
