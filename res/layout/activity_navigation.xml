<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec"
     >
    
<LinearLayout
    android:id="@+id/detail_linearlayout_bottom"
    android:layout_width="fill_parent"
    android:layout_height="50dp"  
    android:background="#1E9D85"
    android:paddingLeft="2dp"
    android:paddingTop="5dp" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center" 
    >

    <TextView
        android:id="@+id/bti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="导航"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/activity_horizontal_margin"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageViewd2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="false"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:src="@drawable/back" />

</RelativeLayout> 
</LinearLayout>
<LinearLayout
    android:id="@+id/xq"
    android:layout_width="fill_parent"
    android:layout_height="120dp"
    android:layout_alignParentLeft="true"
 
      android:background="#FFFFFF"
    android:layout_below="@id/detail_linearlayout_bottom" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f4fff4" >

        <AutoCompleteTextView
            android:id="@+id/auto2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/auto1"
            android:layout_below="@+id/auto1"
            android:textColor="#000000"
            android:ems="10"
            
            android:text="输入终点" />

        <AutoCompleteTextView
            android:id="@+id/auto1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="26dp"
            android:layout_toRightOf="@+id/imageButton1"
            android:ems="10"
            android:text="我的位置"
            android:textColor="#000000"
          
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/auto1"
            android:layout_toLeftOf="@+id/auto2"
            android:layout_marginBottom="15dp"
            android:layout_toRightOf="@+id/imageButton1"
            android:src="@drawable/reddot" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/auto2"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_alignRight="@+id/imageView2"
            android:layout_marginBottom="15dp"
            android:src="@drawable/greendot" />

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageView3"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:background="#FFFFFF"
            android:src="@drawable/duihuan" />
        
    </RelativeLayout>
   
</LinearLayout>
<LinearLayout
    android:id="@+id/bn"
    android:layout_width="fill_parent"
    android:layout_height="50dp"  

    android:layout_alignParentBottom="true"
    android:layout_marginTop="25dp"
    android:background="#FFFFFF"
    >

 <Button
     android:id="@+id/jtdh"
     android:layout_width="wrap_content"
     android:layout_height="match_parent"
     android:layout_centerHorizontal="true"
     android:layout_centerVertical="true"
     android:layout_weight="1.00"
     android:background="#f4fff4"
     android:text="静态导航"
     android:textColor="#000000"
      />
<View 
		    android:layout_width="2px"
		    android:layout_height="wrap_content"
		     android:layout_marginTop="12px"
		    android:layout_marginBottom="12px"
		    android:background="#999999"/>

 <Button
     android:id="@+id/bi2"
     android:layout_width="wrap_content"
     android:layout_height="match_parent"
     android:layout_centerHorizontal="true"
     android:layout_centerVertical="true"
     android:layout_weight="1.00"
     android:background="#f4fff4"
     android:text="动态导航"
     android:textColor="#000000"
     />

</LinearLayout>
</RelativeLayout>
